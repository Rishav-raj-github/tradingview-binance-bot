# BINANCE API CONFIGURATION
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=false  # Set to true for testnet/demo trading
BINANCE_TESTNET_API_KEY=your_testnet_api_key
BINANCE_TESTNET_API_SECRET=your_testnet_api_secret

# EMAIL CONFIGURATION (TradingView Alerts)
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password  # Use App Password, not main password
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_CHECK_INTERVAL=30  # Check email every 30 seconds
EMAIL_ALERT_FOLDER=TradingView  # Gmail folder for TradingView alerts

# TRADING CONFIGURATION
DEFAULT_SYMBOL=BTCUSDT
DEFAULT_TIMEFRAME=1h
DEFAULT_LEVERAGE=1
DEFAULT_ORDER_TYPE=MARKET  # MARKET or LIMIT

# RISK MANAGEMENT
RISK_PERCENTAGE_PER_TRADE=2.0  # Risk 2% of account per trade
MAX_DAILY_LOSS_PERCENT=5.0  # Max daily loss limit
MAX_OPEN_POSITIONS=5
DEFAULT_POSITION_SIZE=0.01  # BTC quantity
TRAILING_STOP_PERCENT=2.0

# TRADING PAIRS
TRADING_PAIRS=BTCUSDT,ETHUSDT,BNBUSDT
MIN_NOTIONAL=10  # Minimum order size in USDT

# NOTIFICATION SETTINGS
ENABLE_TELEGRAM_NOTIFICATIONS=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

ENABLE_DISCORD_NOTIFICATIONS=false
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# LOGGING
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_PATH=./logs/
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# DATABASE
DATABASE_URL=sqlite:///trades.db  # SQLite database
DATABASE_ECHO=false  # Set to true for SQL query logging

# BACKTESTING
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2023-12-31
BACKTEST_INITIAL_CAPITAL=10000
BACKTEST_COMMISSION=0.001  # 0.1% commission

# PERFORMANCE
ENABLE_PERFORMANCE_PROFILING=false
ENABLE_MEMORY_PROFILING=false

# SECURITY
ENCRYPT_API_KEYS=true
ENABLE_IP_WHITELIST=true
ALLOWED_IPS=127.0.0.1

# DEVELOPMENT
DEBUG=false
ENVIRONMENT=production  # production or development
VERBOSE_LOGGING=false
